{
    "manifest_version": 3,
    "name": "Wind Utility",
    "version": "1.0",
    "description": "Un menu d'utilitaires bas√© sur le projet Wind-Utility.",
    "icons": {
        "48": "icon-48.png"
    },
    "action": {
        "default_popup": "main.html",
        "default_icon": "icon-48.png",
        "default_title": "Menu Principal Wind Utility"
    },
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://text.pollinations.ai/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ]
}
